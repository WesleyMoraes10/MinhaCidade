<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade"
    tools:context=".activity.LoginActivity"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:gravity="center">

    <ImageView
        android:layout_width="231dp"
        android:layout_height="231dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo3d" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:background="@drawable/caixa_texto"
        android:ems="10"
        android:hint="Digite seu e-mail"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="#263238"
        android:textColorHint="#263238"
        android:textSize="22dp"
        android:drawableTint="#FFFFFF"
        android:drawableStart="@drawable/ic_paaerson_black_24dp"
        android:drawableLeft="@drawable/abc_vector_test" />

    <EditText
        android:id="@+id/editSenha"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Digite senha"
        android:inputType="textPassword"
        android:textColorHint="#263238"
        android:textColor="#263238"
        android:textSize="22dp"
        android:layout_gravity="center"
        android:background="@drawable/caixa_texto"
        android:padding="8dp"
        android:drawableTint="#FFFFFF"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:drawableLeft="@drawable/abc_vector_test"/>

    <Button
        android:id="@+id/btEntrar"
        android:layout_width="338dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttonshape2"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Entrar"
        android:textColor="#FFFFFF"
        android:textSize="21dp" />

    <TextView
        android:id="@+id/txtAbreCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="101dp"
        android:gravity="center"
        android:text="NÃ£o tem conta? Cadastre-se"
        android:textColor="#FFF"
        android:textSize="19sp"
        android:textStyle="normal|bold" />


</LinearLayout>